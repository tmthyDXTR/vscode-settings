    // ============================================
    // WORKBENCH EDITOR
    // ============================================
    "workbench.editor.autoLockGroups": {
        "vscode.videoPreview": true
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.openSideBySideDirection": "down",
    "workbench.editor.showTabIndex": true,
    "workbench.editor.showTabs": "single",
    "editor.cursorStyle": "block",
    // ============================================
    // WINDOW
    // ============================================
    "window.commandCenter": false,
    "window.menuBarVisibility": "toggle",
    "window.newWindowProfile": "Default",
    // ============================================
    // TERMINAL
    // ============================================
    "terminal.integrated.fontFamily": "'Ubuntu Mono', monospace",
    "terminal.integrated.fontSize": 18,
    // Shell integration for interactive terminal features
    "terminal.integrated.shellIntegration.enabled": true,
    // Enable suggestions from terminal output (makes paths/files clickable/selectable)
    "terminal.integrated.suggest.enabled": true,
    // Enable terminal link detection (Ctrl+Click on paths to open)
    "terminal.integrated.enableFileLinks": "on",
    // Send keybindings to VS Code instead of terminal shell
    "terminal.integrated.sendKeybindingsToShell": false,
    // ============================================
    // SEARCH
    // ============================================
    "search.mode": "reuseEditor",
    "search.searchEditor.defaultNumberOfContextLines": 0,
    "search.searchEditor.reusePriorSearchConfiguration": true,
    // ============================================
    // EXPLORER
    // ============================================
    "explorer.openEditors.visible": 1,
    // ============================================
    // DEBUG & OUTPUT
    // ============================================
    "debug.console.fontFamily": "'Ubuntu Mono', monospace",
    "debug.console.fontSize": 18,
    "output.fontSize": 20,
    "problems.fontSize": 20,
    // ============================================
    // COMMAND LOGGING
    // ============================================
    // Logs all executed commands to the VS Code log files
    // View logs: Help > Open Logs Folder, then check the 'window' folder
    // Or use Developer: Show Logs... command to access specific log files
    "dev.containers.logLevel": "trace",
    // ============================================
    // MARKDOWN
    // ============================================
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Ubuntu Mono', 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
    // ============================================
    // FORMATTING
    // ============================================
    "prettier.tabWidth": 4,
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // ============================================
    // SPELLING
    // ============================================
    "cSpell.dictionaryDefinitions": [],
    "cSpell.enabled": true,
    "cSpell.language": "en,de-DE,de",
    // ============================================
    // CHAT / AI
    // ============================================
    "chat.fontSize": 17,
    "chat.tools.terminal.autoApprove": {
        "rm": true,
        "./noty": true,
        "Move-Item": true
    },
    // ============================================
    // GIT & SECURITY
    // ============================================
    "git.openRepositoryInParentFolders": "always",
    "security.workspace.trust.untrustedFiles": "open",
    // ============================================
    // OTHER
    // ============================================
    "workbench.settings.applyToAllProfiles": [
        "cSpell.language"
    ],
    "zenMode.restore": false,
    "workbench.editor.empty.hint": "hidden",
    "terminal.integrated.stickyScroll.enabled": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.startupEditor": "none",
    // Add semantic token color customizations (for languages that use semantic tokens)
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        // "rules": {
        //     "variable": "#FFFFFF",
        //     "variable.readonly": "#9fe8ff",
        //     "parameter": "#FF8700"
    },
    // Ensure semantic highlighting is enabled so semantic rules apply
    "editor.semanticHighlighting.enabled": true,
    "dired.fixed_window": true,
    "editor.minimap.enabled": false,
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.colorTheme": "Github Light Theme - Gray",
}