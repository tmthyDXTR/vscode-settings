{
    // ============================================
    // EDITOR SETTINGS
    // ============================================
    "editor.accessibilitySupport": "off",
    "editor.background": "#222222",
    "editor.codeLensFontFamily": "'Ubuntu Mono', monospace",
    "editor.fontFamily": "'Ubuntu Mono', monospace",
    "editor.fontSize": 18,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.stickyScroll.enabled": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.wordWrap": "on",
    "editor.tokenColorCustomizations": {
        // "comments": "#A0A0A0"
        "textMateRules": [
            {
                "scope": "string",
                "settings": {
                    "foreground": "#FFFFFF"
                }
            }
        ]
    },
    // ============================================
    // WORKBENCH APPEARANCE
    // ============================================
    "breadcrumbs.enabled": true,
    "workbench.activityBar.location": "hidden",
    "workbench.layoutControl.enabled": false,
    "workbench.preferredHighContrastLightColorTheme": "Default High Contrast",
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 16,
    "workbench.colorCustomizations": {
        // Background colors for panels
        "chat.background": "#222222", // Chat/Copilot panel background
        "editor.background": "#222222", // Main editor background
        "sideBar.background": "#222222", // File explorer/sidebar background
        "terminal.background": "#222222", // Terminal panel background
        // Editor line highlighting
        "editor.lineHighlightBackground": "#222222", // Background of current line
        "editor.lineHighlightBorder": "#6a6a6a", // Border around current line
        // Selection colors (Emacs-style)
        "editor.selectionBackground": "#214283", // Background when you select text (Emacs blue)
        "editor.selectionHighlightBackground": "#34587d80", // Other occurrences of selected text (semi-transparent)
        "list.activeSelectionBackground": "#214283", // Selected item in file explorer/lists
        // Bracket matching
        "editorBracketMatch.border": "#FF5700", // Border around matching brackets
        // "editorBracketMatch.background": "#FF5700",   // Background behind matching brackets (disabled)
        // Indentation guides
        "editorIndentGuide.activeBackground1": "#ffffff", // Active indentation line
        "editorIndentGuide.background1": "#5e5e5e", // Inactive indentation lines
        "editor.guides.indentation": "false", // Toggle indentation guides
        // Whitespace characters
        "editorWhitespace.foreground": "#FF5700", // Color of visible spaces/tabs
    },
    // ============================================
    // WORKBENCH EDITOR
    // ============================================
    "workbench.editor.autoLockGroups": {
        "vscode.videoPreview": true
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.openSideBySideDirection": "down",
    "workbench.editor.showTabIndex": true,
    "workbench.editor.showTabs": "single",
    // ============================================
    // WINDOW
    // ============================================
    "window.commandCenter": false,
    "window.menuBarVisibility": "toggle",
    "window.newWindowProfile": "Default",
    // ============================================
    // TERMINAL
    // ============================================
    "terminal.integrated.fontFamily": "'Ubuntu Mono', monospace",
    "terminal.integrated.fontSize": 18,
    // Shell integration for interactive terminal features
    "terminal.integrated.shellIntegration.enabled": true,
    // Enable suggestions from terminal output (makes paths/files clickable/selectable)
    "terminal.integrated.suggest.enabled": true,
    // Enable terminal link detection (Ctrl+Click on paths to open)
    "terminal.integrated.enableFileLinks": "on",
    // Send keybindings to VS Code instead of terminal shell
    "terminal.integrated.sendKeybindingsToShell": false,
    // ============================================
    // SEARCH
    // ============================================
    "search.mode": "reuseEditor",
    "search.searchEditor.defaultNumberOfContextLines": 0,
    "search.searchEditor.reusePriorSearchConfiguration": true,
    // ============================================
    // EXPLORER
    // ============================================
    "explorer.openEditors.visible": 1,
    // ============================================
    // DEBUG & OUTPUT
    // ============================================
    "debug.console.fontFamily": "'Ubuntu Mono', monospace",
    "debug.console.fontSize": 18,
    "output.fontSize": 20,
    "problems.fontSize": 20,
    // ============================================
    // COMMAND LOGGING
    // ============================================
    // Logs all executed commands to the VS Code log files
    // View logs: Help > Open Logs Folder, then check the 'window' folder
    // Or use Developer: Show Logs... command to access specific log files
    "dev.containers.logLevel": "trace",
    // ============================================
    // MARKDOWN
    // ============================================
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Ubuntu Mono', 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
    // ============================================
    // FORMATTING
    // ============================================
    "prettier.tabWidth": 4,
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // ============================================
    // SPELLING
    // ============================================
    "cSpell.dictionaryDefinitions": [],
    "cSpell.enabled": true,
    "cSpell.language": "en,de-DE,de",
    // ============================================
    // CHAT / AI
    // ============================================
    "chat.fontSize": 17,
    "chat.tools.terminal.autoApprove": {
        "rm": true,
        "./noty": true,
        "Move-Item": true
    },
    // ============================================
    // GIT & SECURITY
    // ============================================
    "git.openRepositoryInParentFolders": "always",
    "security.workspace.trust.untrustedFiles": "open",
    // ============================================
    // OTHER
    // ============================================
    "workbench.settings.applyToAllProfiles": [
        "cSpell.language"
    ],
    "zenMode.restore": false
}